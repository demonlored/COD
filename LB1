#include <stdio.h>

int main()
{
    int a=0,b=0,c=0,t=0;
    printf("Input a,b,c : ");
    int check = scanf("%d %d %d",&a,&b,&c);
    if(check == 3)
    {
        if(a > b)
        {
            t = a;
            a = b;
            b = t;
        }
        if(a > b)
        {
            t = a;
            a = b;
            b = t;
        }
        if(b > c)
        {
            t = b;
            b = c;
            c = t;
        }
        c = c+2;
        a = a-2;
        printf("%d %d %d\n",a, b, c);
    }
    else
    {
        printf("wrong");
    }
    return 0;
}
